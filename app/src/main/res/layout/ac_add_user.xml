<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#1e433B"
    android:padding="@dimen/dp_10"
    android:layout_width="match_parent"


    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="增加用户"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="姓名："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:id="@+id/ed_user_name"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="职务："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:id="@+id/ed_user_zhiwu"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="角色："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:id="@+id/ed_user_type"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:text="工作单位："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:id="@+id/ed_user_work_unit"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="备注："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:maxLength="2"
                    android:id="@+id/ed_user_remark"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:text="服役情况："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:id="@+id/ed_user_bingyi"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:text="身份证号："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:inputType="number"
                    android:id="@+id/ed_user_id_number"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="电话："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:inputType="number"
                    android:maxLength="12"
                    android:id="@+id/ed_user_tell"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="靶位："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/ed_user_position"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_view_gb_create_task"
                android:layout_width="420dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:text="组别："
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:inputType="number"
                    android:maxLength="2"
                    android:id="@+id/ed_user_group"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:text="取消"
            android:gravity="center"
            android:padding="10dp"
                android:id="@+id/id_cancle"
            android:textSize="15dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:textColor="#ffffff"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="200dp"
            android:text="确定"
            android:padding="10dp"
            android:id="@+id/comfir"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:background="@drawable/bg_view_gb_create_task"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>