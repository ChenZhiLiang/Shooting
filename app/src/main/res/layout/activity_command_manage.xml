<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_return_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_return_home" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请选择任务"
                android:textColor="@color/red"
                android:textSize="@dimen/album_sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" - 现场指挥"
                android:textColor="@color/white"
                android:textSize="@dimen/album_sp_20"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/album_dp_30"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_front_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/front_in"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/drop_down_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_kreload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/kreload_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_be_loaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/be_loaded_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_open_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/open_insurance_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_shooting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/shooting_unselet"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_close_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/close_insurance_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_inspect_arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/inspect_arms_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_unload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/unload_unselect"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/img_front_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@mipmap/front_out"
            android:scaleType="centerCrop" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_task_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_task_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:background="@drawable/bg_view_gb_create_task"
            android:text="现在点名"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_complete_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@drawable/bg_view_gb_create_task"
            android:text="完成点名"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_change_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@drawable/bg_view_gb_create_task"
            android:text="调整位置"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_start_shooting_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:background="@drawable/bg_view_gb_create_task"
            android:text="开始打靶"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_task_nest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_view_gb_create_task"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:padding="@dimen/dp_10"
            android:text="下一轮"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_task_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_view_gb_create_task"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:padding="@dimen/dp_10"
            android:text="结束打靶"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/rank_bg1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_50"
            android:background="@color/rank_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_round"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/triangle_down"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="第1轮"
                    android:textColor="@color/rank_text_bg"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10号靶"
                android:textColor="@color/rank_text_bg"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hrecyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1fFFFFFF"/>
      <!--  <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1fFFFFFF"/>-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>