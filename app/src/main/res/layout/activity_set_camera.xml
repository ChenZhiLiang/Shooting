<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="设置摄像头"
        android:padding="10dp"
        android:id="@+id/title"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="输入IP:"
                android:id="@+id/label_02"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="输入IP"
                android:layout_toRightOf="@id/label_02"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#dedede"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="输入登入账号:"
                android:id="@+id/label_03"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="账号"
                android:layout_toRightOf="@id/label_03"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#dedede"
            android:layout_height="1dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="输入密码:"
                android:id="@+id/label_04"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:background="@null"
                android:hint="密码"
                android:layout_toRightOf="@id/label_04"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#dedede"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="选择靶位"
                android:padding="10dp"
                android:id="@+id/label_01"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:layout_width="match_parent"
                android:hint="选择靶位"
                android:id="@+id/sp_set_camera_sel_shoot_position"
                android:layout_toRightOf="@id/label_01"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:background="#dedede"
            android:layout_height="1dp" />
        <Button
            android:layout_width="wrap_content"
            android:text="连接"
            android:layout_marginTop="10dp"
            android:id="@+id/set_camera_bt"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>