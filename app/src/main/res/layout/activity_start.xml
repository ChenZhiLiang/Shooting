<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="角色选择"
        android:padding="10dp"
        android:id="@+id/title"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="选择角色类型"
        android:id="@+id/sp_choose_rolese"
        android:layout_below="@id/title"
        android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/input_adimn_pass"
            android:layout_width="match_parent"

            android:visibility="visible"

            android:layout_below="@id/sp_choose_rolese"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="密码："
                android:id="@+id/label_01"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/input_adimn_pass_ed"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="wrap_content"
                android:hint="输入管理员密码"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/input_adimn_pass_ed"

                android:layout_height="wrap_content" />
        </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:text="确认"
        android:id="@+id/choose_user_type_bt"
        android:layout_below="@id/input_adimn_pass"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>