<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#282828"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#000000"
        android:visibility="gone"
        android:id="@+id/op_lv"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
           android:layout_width="0dp"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:background="#3c533d"
            android:textStyle="bold"
            android:textColor="#FFd966"
            android:id="@+id/zlmd_rwgl"
            android:text="任务管理"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:background="#1E3824"
            android:textStyle="bold"
            android:id="@+id/zlmd_dygl"
            android:layout_marginLeft="1dp"
            android:textColor="#ffffff"
            android:text="队员管理"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/dp_10"
            android:background="#1E3824"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginLeft="1dp"
            android:id="@+id/zlmd_ldgl"
            android:gravity="center"
            android:text="列队管理"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/dp_10"
            android:background="#1E3824"
            android:layout_marginLeft="1dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginRight="1dp"
            android:id="@+id/zlmd_qcgl"
            android:gravity="center"
            android:text="器材管理"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@id/op_lv"
        android:id="@+id/zl_frag_layout"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</RelativeLayout>