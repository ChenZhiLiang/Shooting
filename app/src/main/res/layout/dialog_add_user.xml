<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#1e433B"
    android:padding="@dimen/dp_10"
    android:gravity="top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="新增队员"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/bg_view_gb_create_task"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="姓名："
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:id="@+id/lable_name"
                        android:layout_centerVertical="true"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_width="200dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:id="@+id/ed_name"
                        android:hint="请输入名字"
                        android:textSize="12dp"
                        android:layout_toRightOf="@id/lable_name"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="身份证号："
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:id="@+id/lable_2"
                        android:layout_centerVertical="true"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_width="200dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:id="@+id/ed_id_number"
                        android:layout_toRightOf="@id/lable_2"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:hint="请输入身份证号"
                        android:textSize="12dp"
                        android:gravity="left|center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="工作单位："
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:id="@+id/lable_3"
                        android:layout_centerVertical="true"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_width="200dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:id="@+id/ed_work_unit"
                        android:layout_toRightOf="@id/lable_3"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:hint="请输入工作单位"
                        android:textSize="12dp"
                        android:gravity="left|center"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/lable_4"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:text="角色："
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:layout_width="200dp"
                        android:textColor="#000000"
                        android:id="@+id/sp_user_type"
                        android:layout_toRightOf="@id/lable_4"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:text="请选择"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="分组："
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:id="@+id/lable_5"
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:id="@+id/ed_user_group"
                        android:inputType="number"
                        android:hint="请输入所在分组"
                        android:textSize="12dp"
                        android:layout_toRightOf="@id/lable_5"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_height="30dp"
                        android:orientation="horizontal" >
                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/iv_gropu_down"
                            android:src="@drawable/icon_cont_donw"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:text="1"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:id="@+id/tv_group"
                            android:gravity="center"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/iv_gropu_up"
                            android:src="@drawable/icon_add_number"
                            android:layout_height="30dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="350dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:text="靶位："
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:id="@+id/lable_6"
                        android:layout_centerVertical="true"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:id="@+id/ed_user_positon"
                        android:layout_toRightOf="@id/lable_6"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:hint="请输入所在靶位"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:maxLines="1"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/iv_position_down"
                            android:src="@drawable/icon_cont_donw"
                            android:layout_height="30dp"/>
                        <TextView
                            android:layout_width="30dp"
                            android:text="1"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:id="@+id/tv_position"
                            android:gravity="center"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:id="@+id/iv_position_up"
                            android:src="@drawable/icon_add_number"
                            android:layout_height="30dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:src="@drawable/user_icon"
                   android:id="@+id/iv_user_icon"
                    android:layout_height="120dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:text="点击更换头像"
                android:background="@drawable/bg_view_gb_create_task"
                android:textStyle="bold"
                android:id="@+id/tv_takepic_user_icon"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:layout_height="35dp">
        <TextView
            android:layout_width="0dp"
            android:text="取消"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/id_cancle"
            android:textSize="12dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:text="确定"
            android:padding="10dp"
            android:id="@+id/comfir"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:background="@drawable/bg_view_gb_create_task"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>