<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_create_task_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="@dimen/album_dp_15">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="选择靶位"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/album_dp_35"
        android:background="@drawable/bg_view_gb_create_task"
        android:gravity="center"
        android:layout_marginTop="@dimen/sp_16">

        <TextView
            android:id="@+id/lable_name"
            android:layout_width="@dimen/album_dp_80"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/album_dp_15"
            android:gravity="center"
            android:text="靶位"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/album_dp_2"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/lable_name"
            android:background="#FF446F92" />

        <TextView
            android:id="@+id/tv_target_position"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/album_dp_4"
            android:drawableRight="@drawable/picture_icon_more"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/view_line"
            android:background="#ffffff"
            android:gravity="left|center"
            android:hint="请选择靶位"
            android:maxLines="1"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comfir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>