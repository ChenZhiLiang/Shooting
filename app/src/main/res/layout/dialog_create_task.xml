<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_create_task_bg"
    android:orientation="vertical"
    android:padding="@dimen/album_dp_15"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="新建打靶任务"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center">

            <TextView
                android:id="@+id/lable_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="任务名称"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/lable_name"
                android:background="#FF446F92" />

            <EditText
                android:id="@+id/ed_task_name"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/view_line"
                android:hint="请输入任务名称"
                android:textColorHint="@color/color_info"
                android:background="#133652"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center">

            <TextView
                android:id="@+id/lable_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="任务地点"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line2"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/lable_2"
                android:background="#FF446F92" />

            <EditText
                android:id="@+id/ed_task_addr"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/view_line2"
                android:background="#133652"
                android:hint="请输入任务地点"
                android:textColorHint="@color/color_info"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center">

            <TextView
                android:id="@+id/lable_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="任务时间"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line3"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/lable_3"
                android:background="#FF446F92" />

            <TextView
                android:id="@+id/ed_task_time"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/view_line3"
                android:background="#133652"
                android:gravity="center"
                android:hint="请选择任务时间"
                android:textColorHint="@color/color_info"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/lable_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="列队数量"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line4"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/lable_4"
                android:background="#FF446F92" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/view_line4"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="@dimen/album_dp_20"
                android:layout_marginBottom="4dp"
                android:background="#133652"
                >

                <ImageView
                    android:id="@+id/image_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/buy_add"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="@dimen/album_dp_100"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/image_add"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null"
                    android:inputType="number"
                    android:text="1"
                    android:textColorHint="@color/color_info"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/image_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/buy_reduce"
                    android:layout_toRightOf="@+id/tv_number"
                    android:scaleType="centerCrop"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/album_dp_35"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/lable_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="队员数量"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line5"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/lable_5"
                android:background="#FF446F92" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/view_line5"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="@dimen/album_dp_20"
            android:layout_marginBottom="4dp"
            android:background="#133652"
            >
            <ImageView
                android:id="@+id/image_row_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/buy_add"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_row_count"
                android:layout_width="@dimen/album_dp_100"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/image_row_add"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                android:inputType="number"
                android:text="1"
                android:textColorHint="@color/color_info"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/image_row_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/buy_reduce"
                android:layout_toRightOf="@+id/tv_row_count"
                android:scaleType="centerCrop"/>
        </RelativeLayout>
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="2dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/lable_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:maxLines="1"
                android:text="任务类型："
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/lable_6"
                android:inputType="number"
                android:maxLines="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="胸环靶："
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cb_xhb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="胸靶："
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbxbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="@dimen/album_sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comfir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="5dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="@dimen/album_sp_14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>