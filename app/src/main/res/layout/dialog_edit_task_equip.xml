<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_create_task_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="@dimen/album_dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="修改器材"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/album_dp_30"
            android:layout_height="@dimen/album_dp_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_delete"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/album_dp_35"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_name"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="器材类型"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_name"
                        android:background="#FF446F92" />

                    <TextView
                        android:id="@+id/tv_equip_type"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_2"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="器材名称"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line1"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_2"
                        android:background="#FF446F92" />

                    <TextView
                        android:id="@+id/tv_equip_name"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line1"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_3"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="单位"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line2"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_3"
                        android:background="#FF446F92" />

                    <TextView
                        android:id="@+id/tv_equip_unit"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line2"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_5"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="应带数量"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line5"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_5"
                        android:background="#FF446F92" />

                    <RelativeLayout
                        android:layout_width="@dimen/album_dp_200"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/album_dp_20"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line5">

                        <ImageView
                            android:id="@+id/image_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/buy_add"
                            android:scaleType="centerCrop" />

                        <EditText
                            android:id="@+id/edit_row_count"
                            android:layout_width="@dimen/album_dp_100"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/image_add"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textColorHint="@color/color_info"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image_reduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/edit_row_count"
                            android:background="@mipmap/buy_reduce"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_6"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="实带数量"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line6"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_6"
                        android:background="#FF446F92" />

                    <RelativeLayout
                        android:layout_width="@dimen/album_dp_200"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/album_dp_20"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line6">

                        <ImageView
                            android:id="@+id/image_count_take_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/buy_add"
                            android:scaleType="centerCrop" />

                        <EditText
                            android:id="@+id/edit_row_count_take"
                            android:layout_width="@dimen/album_dp_100"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/image_count_take_add"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textColorHint="@color/color_info"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image_count_take_reduce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/edit_row_count_take"
                            android:background="@mipmap/buy_reduce"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_comfir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>