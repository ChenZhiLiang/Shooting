<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_create_task_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="@dimen/album_dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增队员"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(缺勤)"
                android:textColor="@color/red"
                android:textSize="16dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="@dimen/album_dp_30"
            android:layout_height="@dimen/album_dp_30"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_delete"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/album_dp_35"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_name"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="姓名"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_name"
                        android:background="#FF446F92" />

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:hint="请输入名字"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_2"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="身份证号"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line1"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_2"
                        android:background="#FF446F92" />

                    <EditText
                        android:id="@+id/ed_id_number"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line1"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:hint="请输入身份证号"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_3"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="工作单位"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line2"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_3"
                        android:background="#FF446F92" />

                    <EditText
                        android:id="@+id/ed_work_unit"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line2"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:hint="请输入工作单位"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/album_dp_35"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/lable_4"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="角色"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line4"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_4"
                        android:background="#FF446F92" />

                    <EditText
                        android:id="@+id/ed_user_type"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line4"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:hint="请输入角色"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_5"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="分组"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line5"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_5"
                        android:background="#FF446F92" />

                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line5"
                        android:background="#133652">

                        <ImageView
                            android:id="@+id/image_add_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/album_dp_20"
                            android:background="@mipmap/buy_add"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tv_number_row"
                            android:layout_width="@dimen/album_dp_100"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/image_add_row"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textColorHint="@color/color_info"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image_reduce_row"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_number_row"
                            android:background="@mipmap/buy_reduce"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/ed_group"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line5"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:hint="请输入分组"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_view_gb_create_task"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/lable_6"
                        android:layout_width="@dimen/album_dp_80"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/album_dp_15"
                        android:gravity="center"
                        android:text="靶位"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_line6"
                        android:layout_width="@dimen/album_dp_2"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/lable_6"
                        android:background="#FF446F92" />
                    <RelativeLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line6"
                        android:background="#133652">

                        <ImageView
                            android:id="@+id/image_add_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/album_dp_20"
                            android:background="@mipmap/buy_add"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/tv_number_position"
                            android:layout_width="@dimen/album_dp_100"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/image_add_position"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textColorHint="@color/color_info"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/image_reduce_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_number_position"
                            android:background="@mipmap/buy_reduce"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/ed_position"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/album_dp_4"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_toRightOf="@id/view_line6"
                        android:background="#ffffff"
                        android:gravity="left|center"
                        android:hint="请输入靶位"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/dp_10"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="@dimen/album_dp_100"
                android:layout_height="@dimen/album_dp_100"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon"
                app:riv_corner_radius="@dimen/album_dp_20"
                app:riv_oval="false" />

            <TextView
                android:id="@+id/tv_takepic_user_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center"
                android:padding="5dp"
                android:text="点击更换头像"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/comfir"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center"
                android:padding="5dp"
                android:text="报道"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comfir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>