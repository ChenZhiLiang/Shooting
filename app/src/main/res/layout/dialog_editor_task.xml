<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#1e433B"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="任务编辑"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center">
                <TextView
                    android:id="@+id/lable_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="任务名称："
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/ed_task_name"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/lable_name"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center">
                <TextView
                    android:id="@+id/lable_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="任务地点："
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/ed_task_addr"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="#000000"


                    android:layout_toRightOf="@id/lable_2"
                    android:textStyle="bold"

                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center">
                <TextView
                    android:id="@+id/lable_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="任务时间："
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/ed_task_time"
                    android:layout_width="300dp"
                    android:layout_height="30dp"

                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="#000000"


                    android:layout_toRightOf="@id/lable_3"

                    android:text="请选择"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lable_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="列队数量："
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ld_number"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/lable_4"
                    android:inputType="number"
                    android:maxLines="1"

                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="#000000"

                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center"
                android:visibility="visible">
                <TextView
                    android:id="@+id/lable_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="队员数量："
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dy_number"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/lable_5"
                    android:inputType="number"
                    android:maxLines="1"

                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="16dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="#000000"

                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_view_gb_create_task"
                android:gravity="center"
                android:padding="2dp"
                android:visibility="visible">
                <TextView
                    android:id="@+id/lable_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="任务类型："
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/lable_6"
                    android:inputType="number"
                    android:maxLines="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:textSize="16dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:text="胸环靶"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_cancle"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="8dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comfir"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="8dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>