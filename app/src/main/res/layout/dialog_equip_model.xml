<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_create_task_bg"
    android:orientation="vertical"
    android:padding="@dimen/album_dp_15"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="新增器材模板"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="器材模板名称"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_name"
                android:background="#FF446F92" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/view_line"
                android:hint="请输入器材模板名称"
                android:textColorHint="@color/color_info"
                android:background="#133652"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/album_dp_35"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/album_dp_15"
                android:layout_marginRight="@dimen/album_dp_15"
                android:text="器材模板描述"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/view_line1"
                android:layout_width="@dimen/album_dp_2"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_desc"
                android:background="#FF446F92" />

            <EditText
                android:id="@+id/ed_desc"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/view_line1"
                android:hint="请输入器材模板描述"
                android:textColorHint="@color/color_info"
                android:background="#133652"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"

                />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="@dimen/album_sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_comfir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/bg_view_gb_create_task"
            android:gravity="center"
            android:padding="5dp"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="@dimen/album_sp_14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>