<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="420dp"
        android:layout_gravity="center"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/view_border_blue"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/album_dp_30"
            android:layout_marginLeft="@dimen/album_dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="5环，中"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:id="@+id/lable_01"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="@dimen/album_dp_100"
                android:layout_toRightOf="@id/lable_01"
                android:layout_marginRight="@dimen/album_dp_10"
                android:id="@+id/ed_01"
                android:inputType="number"
                android:background="@drawable/view_border_gray"
                android:text="选择"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/ed_01"
                android:text="发"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/view_border_blue"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/album_dp_30"
            android:layout_marginLeft="@dimen/album_dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="6环:"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:id="@+id/lable_02"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/album_dp_100"
                android:layout_toRightOf="@id/lable_02"
                android:layout_marginRight="@dimen/album_dp_10"
                android:id="@+id/ed_02"
                android:inputType="number"
                android:background="@drawable/view_border_gray"
                android:hint="输入成绩："
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/view_border_blue"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/album_dp_30"
            android:layout_marginLeft="@dimen/album_dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="7环:"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:id="@+id/lable_07"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/album_dp_100"
                android:layout_toRightOf="@id/lable_07"
                android:layout_marginRight="@dimen/album_dp_10"
                android:id="@+id/ed_03"
                android:background="@drawable/view_border_gray"
                android:hint="输入成绩："
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/view_border_blue"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/album_dp_30"
            android:layout_marginLeft="@dimen/album_dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="8环:"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:id="@+id/lable_08"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/album_dp_100"
                android:layout_toRightOf="@id/lable_08"
                android:layout_marginRight="@dimen/album_dp_10"
                android:id="@+id/ed_04"
                android:inputType="number"
                android:background="@drawable/view_border_gray"
                android:hint="输入成绩："
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/view_border_blue"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/album_dp_30"
            android:layout_marginLeft="@dimen/album_dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="9环:"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:id="@+id/lable_09"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/album_dp_100"
                android:layout_toRightOf="@id/lable_09"
                android:layout_marginRight="@dimen/album_dp_10"
                android:id="@+id/ed_05"
                android:background="@drawable/view_border_gray"
                android:hint="输入成绩："
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/view_border_blue"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/album_dp_30"
            android:layout_marginLeft="@dimen/album_dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="10环:"
                android:padding="5dp"
                android:background="#153c12"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:id="@+id/lable_10"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="@dimen/album_dp_100"
                android:layout_toRightOf="@id/lable_10"
                android:layout_marginRight="@dimen/album_dp_10"
                android:id="@+id/ed_06"
                android:background="@drawable/view_border_gray"
                android:hint="输入成绩："
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:text="提交"
        android:padding="5dp"
        android:background="#153c12"
        android:textColor="#ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/confirm"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</LinearLayout>