<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#282828"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:text="队员管理"
        android:textStyle="bold"
        android:id="@+id/tv_title"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_return_home"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_return_home" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:id="@+id/op_menu"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/iv_create"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_create"
            android:layout_height="25dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="2dp"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_idcard"
            android:layout_height="25dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/icon_editor"
            android:id="@+id/iv_ed_user"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/input_by_excel"
            android:src="@drawable/icon_input"
            android:layout_height="25dp"/>
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/iv_delete"
            android:layout_marginLeft="2dp"
            android:src="@drawable/icon_delete"
            android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/bt_menu"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="上一页"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="下一页"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/op_menu"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_above="@id/bt_menu"
        android:layout_height="match_parent">
        <include layout="@layout/item_duiyuan_title"/>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/smrefresh"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:background="#1f443c"
                android:id="@+id/duiyuan_listview"
                android:visibility="visible"
                android:layout_height="match_parent"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>



</RelativeLayout>