<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:background="@drawable/zhihui_bg1"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lv"
        android:layout_marginTop="60dp"
       android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:text="向射击阵地前进"
            android:id="@+id/tv_qianjin"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:text="打开保险"
            android:id="@+id/tv_baoxian_open"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:text="关闭保险"
            android:id="@+id/tv_baoxian_close"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/lv"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:background="@drawable/blue_button_background"
            android:text="卧倒"
            android:id="@+id/tv_wodao"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:text="装弹"
            android:id="@+id/tv_zhuangdan"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:text="上膛"
            android:id="@+id/tv_shangtang"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:text="射击"
            android:id="@+id/tv_sheji"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:text="验枪"
            android:id="@+id/tv_yanqiang"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:id="@+id/xiedan"
            android:layout_marginLeft="20dp"
            android:text="卸弹"
            android:background="@drawable/blue_button_background"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>