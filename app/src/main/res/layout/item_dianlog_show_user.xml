<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#dfdfff"
    android:layout_width="wrap_content"
    android:padding="@dimen/album_dp_30"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="姓名"
        android:id="@+id/tv_name"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="职务"
        android:id="@+id/tv_post"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="身份证"
        android:id="@+id/tv_idNumber"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="联系电话"
        android:id="@+id/tv_tell"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="服兵役情况"
        android:id="@+id/tv_mtservice"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="工作单位"
        android:id="@+id/tv_work_unit"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="备注"
        android:id="@+id/tv_remark"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="签到"
            android:background="#efcc43"
            android:padding="@dimen/dp_10"
            android:id="@+id/tv_is_come"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="缺勤"
            android:id="@+id/tv_not_come"
            android:background="#ef2243"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>